<h2>Sign up</h2>

<div class="well span6">
<h3>Transbucket.com will never sell, rent, or lease your information.</h3>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>


<%= f.input :name %>
<%= f.input :email %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
<%= f.label :gender %> 
<%= f.select :gender, options_for_select([['None', 1], ['MTF', 2], ['FTM', 3], ['GenderQueer', 4], ['Cisgender', 5]]), {}, {:multiple => true, :class => "gender" } %>
<br>
<br>
<%= f.submit "Submit", class: "btn btn-primary btn-large" %>
<% end %>
</div>
<br clear="both">
<%= render "devise/shared/links" %>