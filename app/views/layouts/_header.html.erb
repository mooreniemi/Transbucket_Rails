        </li>
      <% end %>
        <% if user_signed_in? %>
        <%= render partial: 'layouts/logged_in' %>
        <% end %>
        <%= render partial: 'layouts/account_menu' %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
