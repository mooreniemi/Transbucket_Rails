<script>
  $(document).ready(function() {
    $("#sensation").rating();
    $("#satisfaction").rating();
});
</script>

<ul class="list-group">
  <li class="list-group-item">
    <label>Cost</label>
    <%= f.text_field :cost %>
  </li>
  <li class="list-group-item">
    <label>Post-op Sensation</label>
    <%= number_field(:pin, :sensation, {class: "rating", data: {size: 'xs'}, required: false}) %>
  </li>
  <li class="list-group-item">
    <label>Post-op Satisfaction</label>
    <%= number_field(:pin, :satisfaction, {class: "rating", data: {size: 'xs'}, required: false}) %>
  </li>
  <li class="list-group-item">
    <label>Seeking a revision</label>
    <%= f.check_box :revision %>
  </li>
</ul>