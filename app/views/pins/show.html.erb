<% title 'Submission #' + @pin.id.to_s %>
<div class="row-fluid">
	<div class="span6">
		<div class="well">
			<% for pinimage in @pin.pin_images.reject {|p| p.photo_file_size.nil?} do %>
			  <%= image_tag pinimage.photo %>
        <br>
			  <%= pinimage.caption.to_s %>
        <br><br>
			<% end %>
			<br><%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, pins_path %>
      <% if current_user == @pin.user || current_user.admin == true %>
        | <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_pin_path(@pin) %>
      <% end %>
		</div>
</div>
<div class="span4">
	<dl class="dl-horizontal">
    <dt><i class="fa fa-user-md"></i> Surgeon</dt>
    <dd><%= @pin.surgeon.id == 911 ? 'unknown' : 'Dr. ' + @pin.surgeon.to_s %></dd>

    <dt><i class="fa fa-plus-square"></i> Procedure</dt>
    <dd><%= @pin.procedure.name %></dd>

    <dt><i class="fa fa-usd"></i> Cost</dt>
    <dd><%= number_with_delimiter(@pin.cost) %></dd>

    <dt><i class="fa fa-exclamation-circle"></i> Want revision?</dt>
    <dd><%= @pin.revision %></dd>

    <% if @pin.sensation.present? %>
      <dt>Post-op Sensation</dt>
        <dd>
          <% 5.times do |i| %>
            <%= radio_button(:pin, :sensation, i, {class: "star", disabled: "disabled"}) %>
          <% end %>
        </dd>
      <br>
    <% end %>

    <% if @pin.satisfaction.present? %>
      <dt>Post-op Satisfaction</dt>
      <dd><% 5.times do |i| %>
          <%= radio_button(:pin, :satisfaction, i, {class: "star", disabled: "disabled"}) %>
        <% end %>
      </dd>
      <br>
    <% end %>

    <dt><i class="fa fa-quote-left"></i> Description</dt>
    <dd style="background-color:#fff; padding:10px;"><%= @pin.details %></dd>
   </dl>

<% if @pin.user.present? %><small class="pull-right">Submitter: <strong><%= link_to @pin.user.username.presence || @pin.user.id, by_path(by_user: @pin.user) %></small></strong><% end %>
</div>

<br clear="both" />

<div id="comments-container">
  <%= render :partial => 'comments/form', :locals => { :comment => @new_comment } %>

  <%= render :partial => 'comments/comment', :collection => @comments, :as => :comment %>
</div>