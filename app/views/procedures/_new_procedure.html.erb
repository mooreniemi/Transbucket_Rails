<div id="procedure_container" class="add-form hide">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to fa_icon("times"), '#', class: 'cancel pull-right' %>
      <h3 class="panel-title">Add a new procedure</h3>
    </div>
    <div class="panel-body">
      <div class="input-group padded_nicely">
        <%= procedure_form.text_field :name, placeholder: "Name of procedure" %>
      </div>
      <div class="input-group padded_nicely">
        <%= procedure_form.select :body_type, options_for_select([ "Top", "Bottom", "Face", "Other" ]) %>
      </div>
      <div class="input-group padded_nicely">
        <%= procedure_form.select :gender, options_for_select([ "FTM", "MTF" ]) %>
      </div>
    </div>
  </div>
</div>
