<div id="surgeon_container" class="add-form hide">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to fa_icon("times"), '#', class: 'cancel pull-right' %>
      <h3 class="panel-title">Add a new surgeon</h3>
    </div>
    <div class="panel-body">
      <div class="input-group padded_nicely">
        <%= surgeon_form.text_field :last_name, placeholder: "Surgeon's last name" %>
      </div>
      <div class="input-group padded_nicely">
        <%= surgeon_form.text_field :first_name, placeholder: "Surgeon's first name" %>
      </div>
      <div class="input-group padded_nicely">
        <%= surgeon_form.text_field :url, placeholder: "Surgeon's URL" %>
      </div>
    </div>
  </div>
</div>
