<div class="box"><%= link_to (image_tag pin.image(:medium)), pin %>
	<p class="description">
<%= pin.description %> by <strong> <%= pin.user.name %></strong> 
<% if current_user == pin.user %> | <%= link_to 'Edit', edit_pin_path(pin) %>
| <%= link_to 'Remove', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>
</div>